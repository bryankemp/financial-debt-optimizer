root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
max_line_length = 88
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json,js}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab